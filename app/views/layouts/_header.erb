<div id="header">
  <div style="margin-left: auto; margin-right: auto; width: 1100px;">
    <div class="float_left" id="admin_links">
      <% if signed_in? %>
        <%= link_to t('categories'), categories_path %>
        <%= link_to t('products_list'), products_path %>
        <%= link_to(t('orders') + " (#{@new_orders_count.to_s})", orders_path) %>
        <%= link_to t('profile'), admin_profile_path %>
        <%= link_to t('sign_out'), signout_path, :method => :delete %>
      <% else %>
      <% end %>
    </div>
    <div class="float_right">
      <%= link_to t('cart'), cart_path(@cart) %>
      <%= link_to t('catalog'), catalog_path %>
    </div>
  </div>
</div>

<%= render 'shared/flash_messages'%>
<%= render 'shared/signin_window'  %>


