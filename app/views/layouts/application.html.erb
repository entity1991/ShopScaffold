<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/styles_&_scripts' %>
  </head>
  <body>
    <div id="wrapper">
      <%= render 'layouts/header'%>
      <div id="main">
        <div id="cap">
          <%= form_tag "/articles/index", method: "get", id: "search_form" do %>
            <%= text_field_tag :search, "", placeholder: t('search')%>
            <%= submit_tag '', id: "search_submit", hint: t('search')%>
          <% end %>
        </div>
        <%= render 'layouts/sidebar' %>
        <div id="content">
          <%= yield %>
        </div>
      </div>
      <div class="cleaner"></div>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>