<h3>Настройки профиля</h3>

<%= form_for @admin, url: admin_profile_path do |f|%>
  <div class="form_fields">
    <%= f.label "Почтовый адрес" %><br>
    <span class="field_notice">Имейте ввиду, что на даную почту будет отправлятся рассылка новых заказов!</span><br>
    <%= f.text_field :email%><br>
    <%= f.label "Пароль" %><br>
    <%= f.password_field :password%><br>
    <%= f.label "Подтвердите пароль" %><br>
    <%= f.password_field :password_confirmation %><br>
    <%= f.submit "Обновить профиль", name: :change_admin_profile %>
  </div>
  <div class="form_errors">
    <%= render 'shared/error_messages', :object => f.object %>
  </div>
<% end %>