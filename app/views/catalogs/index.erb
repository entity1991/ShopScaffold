<% if @products %>
  <%= will_paginate @products %>
  <% @products.each do |product| %>
    <div class="product">
      <div class="product_header">
        <div class="product_title"><%= product.title %></div>
        <div class="product_price"><%= "#{to_grn product.price}" %></div>
      </div>
      <div class="cleaner"></div>
      <div class="product_image">
        <%= image_tag product.image.url :medium%>
        <div class="zoom_in"></div>
      </div>
      <div class="product_desc"><%= cut product.description, 800 %></div>
      <%= link_to t('add_to_cart'), line_items_path(:product_id => product), :method => :post, :remote => true, :class => "add_to_cart" %>
      <%= link_to t('details'), our_product_path(product), class: "product_details_link" %>
    </div>
  <% end %>
  <%= will_paginate @products %>
<% else %>
<% end %>