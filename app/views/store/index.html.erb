<h1>Our products</h1>
<% @articles.each do |article| %>
    <div class="article_box">
      <%= rails %>
      <h3><%= article.title %></h3>
      <span class="article_detail"><%= sanitize(article.description) %></span>
      <div>
        <%= button_to 'Add to Cart', line_items_path(article_id: article.id), remote: true, class: "add_to_cart" %>
        <span class="article_price"><%= sprintf("$%0.02f", article.price) %></span>
      </div>
    </div>
<% end %>